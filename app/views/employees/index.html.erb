<p id="notice"><%= notice %></p>

<h1>Employees</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Salary</th>
      <th>Department</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.first_name %></td>
        <td><%= employee.last_name %></td>
        <td><%= to_phone(employee.phone) %></td>
        <td><%= employee.email %></td>
        <td><%= to_currency(employee.salary) %></td>
        <td><%= employee.department %></td>
        <td><%= link_to 'Show', employee %></td>
        <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
        <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Employee', new_employee_path %>

<%= form_tag import_employees_path, multipart: true do %>
  <div class="form-group">
    <%= link_to "Export CSV", employees_path(format: :csv) %>
  </div>

  <div class="form-group">
    <%= file_field_tag :file %>
  </div>

  <div class="form-group">
    <%= submit_tag "Import CSV" %>
  </div>
<% end %>

